{{#if addQuestion}}
<form>
  <div class="form-group">
    <label for="content">Your Question:</label>
    {{input value=content id="content"}}
  </div>

  <div class="form-group">
    <label for="author">Your Name:</label>
    {{input value=author id="author"}}
  </div>

  <div class="form-group">
    <label for="notes">Add notes:</label>
    {{input value=notes id="notes"}}
  </div>
  <button class="btn btn-default btn-lg" {{action 'saveQuestion'}}>Submit</button>
</form>
{{else}}
<button class="btn btn-default btn-lg ask-button" {{action 'questionFormShow'}}>ASK NOW!</button>
{{/if}}
