{{#if updateQuestion}}
<form>
  <div class="form-group">
    <label for="content">Your Question:</label>
    {{input value=content id="content"}}
  </div>

  <div class="form-group">
    <label for="author">Your Name:</label>
    {{input value=author id="author"}}
  </div>

  <div class="form-group">
    <label for="notes">Add notes:</label>
    {{input value=notes id="notes"}}
  </div>
  <button class="btn btn-default btn-lg" {{action 'saveQuestionUpdate' question}}>Submit</button>
</form>
{{else}}
<button class="btn btn-default btn-lg" {{action 'updateFormShow'}}>Update Question</button>
{{/if}}
